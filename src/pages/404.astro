---
// src/pages/404.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="404 - Page Not Found">
  <Header />

  <section class="pt-32 pb-24 bg-stone-50 min-h-[60vh] flex items-center">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h1 class="font-heading text-8xl font-bold text-primary mb-4">404</h1>
      <h2 class="font-heading text-3xl font-bold text-primary mb-6">Page Not Found</h2>
      <p class="text-stone-600 text-lg mb-8">
        Sorry, the page you're looking for doesn't exist.
      </p>
      <a 
        href="/" 
        class="inline-flex items-center gap-2 gold-gradient text-white px-8 py-4 font-medium rounded-lg hover:opacity-90 transition-opacity"
      >
        Go Home
      </a>
    </div>
  </section>

  <Footer />
</Layout>
