---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us">
  <Header />

  <!-- Hero -->
  <section class="pt-28 sm:pt-32 pb-12 sm:pb-16 bg-stone-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="max-w-3xl">
        <p class="text-gold uppercase tracking-[0.2em] text-xs sm:text-sm mb-3 sm:mb-4">Contact Us</p>
        <h1 class="font-heading text-3xl sm:text-4xl md:text-5xl xl:text-6xl font-bold text-primary mb-4 sm:mb-6">
          Let's Create Something Beautiful
        </h1>
        <p class="text-stone-600 text-base sm:text-lg leading-relaxed">
          Ready to transform your space? Get in touch with us to schedule a consultation.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-12 sm:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 sm:gap-16">
        <!-- Contact Form -->
        <div>
          <h2 class="font-heading text-2xl sm:text-3xl font-bold text-primary mb-6 sm:mb-8">Send us a Message</h2>
          
          <form name="contact" method="POST" data-netlify="true" class="space-y-5 sm:space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
              <div>
                <label for="name" class="block text-stone-600 text-sm font-medium mb-2">Your Name</label>
                <input 
                  type="text" 
                  id="name" 
                  class="w-full px-4 py-3 border border-stone-300 focus:border-gold focus:outline-none transition-colors"
                  placeholder="John Doe"
                />
              </div>
              <div>
                <label for="phone" class="block text-stone-600 text-sm font-medium mb-2">Phone Number</label>
                <input 
                  type="tel" 
                  id="phone" 
                  class="w-full px-4 py-3 border border-stone-300 focus:border-gold focus:outline-none transition-colors"
                  placeholder="+971 50 123 4567"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-stone-600 text-sm font-medium mb-2">Email Address</label>
              <input 
                type="email" 
                id="email" 
                class="w-full px-4 py-3 border border-stone-300 focus:border-gold focus:outline-none transition-colors"
                placeholder="john@example.com"
              />
            </div>

            <div>
              <label for="service" class="block text-stone-600 text-sm font-medium mb-2">Service Interested In</label>
              <select 
                id="service" 
                class="w-full px-4 py-3 border border-stone-300 focus:border-gold focus:outline-none transition-colors bg-white"
              >
                <option value="">Select a service</option>
                <option value="residential">Residential Interior Design</option>
                <option value="commercial">Commercial Interior Design</option>
                <option value="retail">Retail Interior Design</option>
                <option value="visualization">3D Visualization</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-stone-600 text-sm font-medium mb-2">Your Message</label>
              <textarea 
                id="message" 
                rows="5" 
                class="w-full px-4 py-3 border border-stone-300 focus:border-gold focus:outline-none transition-colors resize-none"
                placeholder="Tell us about your project..."
              ></textarea>
            </div>

            <button 
              type="submit" 
              class="w-full gold-gradient text-white py-3 sm:py-4 font-medium text-base sm:text-lg hover:opacity-90 transition-opacity"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="lg:pl-8 xl:pl-16">
          <h2 class="font-heading text-2xl sm:text-3xl font-bold text-primary mb-6 sm:mb-8">Get in Touch</h2>
          
          <div class="space-y-6 sm:space-y-8">
            <div class="flex items-start gap-4">
              <div class="w-10 sm:w-12 h-10 sm:h-12 gold-gradient flex items-center justify-center flex-shrink-0">
                <svg class="w-5 sm:w-6 h-5 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-heading text-lg font-semibold text-primary mb-1">Visit Our Studio</h3>
                <p class="text-stone-600 text-sm sm:text-base">
                  Infinity Square Design Studio<br/>
                  Sheikh Zayed Road<br/>
                  Dubai, United Arab Emirates
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-10 sm:w-12 h-10 sm:h-12 gold-gradient flex items-center justify-center flex-shrink-0">
                <svg class="w-5 sm:w-6 h-5 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-heading text-lg font-semibold text-primary mb-1">Email Us</h3>
                <p class="text-stone-600 text-sm sm:text-base">
                  hello@infinitysquare.ae<br/>
                  projects@infinitysquare.ae
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-10 sm:w-12 h-10 sm:h-12 gold-gradient flex items-center justify-center flex-shrink-0">
                <svg class="w-5 sm:w-6 h-5 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-heading text-lg font-semibold text-primary mb-1">Call Us</h3>
                <p class="text-stone-600 text-sm sm:text-base">
                  +971 4 123 4567<br/>
                  +971 50 987 6543
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-10 sm:w-12 h-10 sm:h-12 gold-gradient flex items-center justify-center flex-shrink-0">
                <svg class="w-5 sm:w-6 h-5 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-heading text-lg font-semibold text-primary mb-1">Office Hours</h3>
                <p class="text-stone-600 text-sm sm:text-base">
                  Sunday - Thursday: 9:00 AM - 7:00 PM<br/>
                  Friday - Saturday: Closed
                </p>
              </div>
            </div>
          </div>

          <!-- Map Placeholder -->
          <div class="mt-10 sm:mt-12 bg-stone-100 h-48 sm:h-64 flex items-center justify-center">
            <p class="text-stone-500">Map coming soon</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
