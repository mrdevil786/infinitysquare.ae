---
import '../styles/global.css';

interface Props {
  title: string;
  /** When set (e.g. on index), preload this image for LCP. */
  preloadImage?: string;
}

const { title, preloadImage } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Infinity Square LLC AE</title>
    {preloadImage && <link rel="preload" as="image" href={preloadImage} />}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://images.unsplash.com">
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="font-sans text-stone-800 bg-stone-50" style="--header-height: calc(4.5rem + env(safe-area-inset-top));">
    <a
      href="#main-content"
      class="sr-only focus:fixed focus:left-4 focus:top-4 focus:z-[100] focus:w-auto focus:h-auto focus:px-4 focus:py-2 focus:m-0 focus:overflow-visible focus:[clip:auto] focus:bg-primary focus:text-white focus:rounded-lg"
    >
      Skip to main content
    </a>
    <slot />
  </body>
</html>
