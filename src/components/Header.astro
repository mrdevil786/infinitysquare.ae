---
import { navLinks } from '../data/site';
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-xl border-b border-stone-100 transition-all duration-300 pt-[env(safe-area-inset-top)]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-3 sm:py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2.5">
      <div class="w-9 sm:w-10 h-9 sm:h-10 gold-gradient rounded-xl flex items-center justify-center shadow-sm">
        <span class="text-white font-heading text-lg sm:text-xl font-bold">I</span>
      </div>
      <span class="font-semibold text-primary hidden sm:block text-base sm:text-lg tracking-tight">Infinity Square LLC</span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden lg:flex items-center gap-8 xl:gap-10">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="text-zinc-600 hover:text-primary font-medium text-sm tracking-tight transition-colors"
        >
          {link.name}
        </a>
      ))}
    </nav>

    <!-- CTA Button -->
    <a
      href="/contact"
      class="hidden lg:inline-flex items-center gap-2 gold-gradient text-white px-5 py-2.5 text-sm font-semibold rounded-xl shadow-sm hover:opacity-95 transition-all"
    >
      Get Started
    </a>

    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-btn"
      type="button"
      class="lg:hidden p-2 text-stone-600 hover:text-primary"
      aria-label="Toggle menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="mobile-menu lg:hidden bg-white border-t absolute left-0 right-0 shadow-lg pb-[env(safe-area-inset-bottom)]" aria-hidden="true">
    <nav class="flex flex-col px-4 sm:px-6 py-4 gap-1">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="text-zinc-600 hover:text-primary font-medium py-3 px-4 rounded-xl hover:bg-zinc-50 transition-colors"
        >
          {link.name}
        </a>
      ))}
      <a
        href="/contact"
        class="gold-gradient text-white px-4 py-3 text-center font-semibold mt-3 rounded-xl shadow-sm"
      >
        Get Started
      </a>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  const header = document.getElementById('header');
  
  let isMenuOpen = false;
  
  btn?.addEventListener('click', () => {
    isMenuOpen = !isMenuOpen;
    btn?.setAttribute('aria-expanded', String(isMenuOpen));
    menu?.classList.toggle('mobile-menu-open');
    menu?.setAttribute('aria-hidden', String(!isMenuOpen));
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });

  // Close menu on link click
  menu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      isMenuOpen = false;
      btn?.setAttribute('aria-expanded', 'false');
      menu?.classList.remove('mobile-menu-open');
      menu?.setAttribute('aria-hidden', 'true');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    });
  });

  // Header scroll effect (throttled with rAF)
  let scrollScheduled = false;
  window.addEventListener('scroll', () => {
    if (scrollScheduled) return;
    scrollScheduled = true;
    requestAnimationFrame(() => {
      const currentScroll = window.pageYOffset;
      if (currentScroll > 50) {
        header?.classList.add('shadow-md');
      } else {
        header?.classList.remove('shadow-md');
      }
      scrollScheduled = false;
    });
  });
</script>
