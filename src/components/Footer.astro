---
import { footerServices, footerCompany, getFooterContactEntries } from '../data/site';

const currentYear = new Date().getFullYear();
const contactInfo = getFooterContactEntries();
---

<footer class="bg-primary text-white pt-12 sm:pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 sm:gap-12 mb-10 sm:mb-12">
      <!-- Brand -->
      <div class="sm:col-span-2 lg:col-span-1">
        <a href="/" class="flex items-center gap-2 mb-4">
          <div class="w-10 h-10 gold-gradient flex items-center justify-center">
            <span class="text-white font-heading text-xl font-bold">I</span>
          </div>
          <span class="font-heading text-xl font-semibold">Infinity Square</span>
        </a>
        <p class="text-stone-400 text-sm leading-relaxed mb-6">
          Premium interior design studio crafting timeless, elegant spaces across the UAE.
        </p>
        <div class="flex gap-3">
          <a href="#" class="w-9 h-9 bg-stone-800 flex items-center justify-center hover:bg-gold transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          </a>
          <a href="#" class="w-9 h-9 bg-stone-800 flex items-center justify-center hover:bg-gold transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
          </a>
          <a href="#" class="w-9 h-9 bg-stone-800 flex items-center justify-center hover:bg-gold transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/></svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h4 class="font-heading text-lg font-semibold mb-4">Services</h4>
        <ul class="space-y-3">
          {footerServices.map((item) => (
            <li>
              <a href={item.href} class="text-stone-400 hover:text-gold text-sm transition-colors">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="font-heading text-lg font-semibold mb-4">Company</h4>
        <ul class="space-y-3">
          {footerCompany.map((item) => (
            <li>
              <a href={item.href} class="text-stone-400 hover:text-gold text-sm transition-colors">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-heading text-lg font-semibold mb-4">Contact</h4>
        <ul class="space-y-3">
          {contactInfo.map((item) => (
            <li class="text-stone-400 text-sm">
              <span class="block text-stone-500 text-xs uppercase tracking-wide mb-0.5">{item.label}</span>
              {item.value}
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="border-t border-stone-800 pt-6 sm:pt-8 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-stone-500 text-sm text-center sm:text-left">
        Â© {currentYear} Infinity Square AE. All rights reserved.
      </p>
      <div class="flex gap-5 sm:gap-6">
        <span class="text-stone-500 text-sm cursor-default" aria-disabled="true" title="Coming soon">Privacy Policy <span class="text-stone-600">(Coming soon)</span></span>
        <span class="text-stone-500 text-sm cursor-default" aria-disabled="true" title="Coming soon">Terms of Service <span class="text-stone-600">(Coming soon)</span></span>
      </div>
    </div>
  </div>
</footer>
